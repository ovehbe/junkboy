<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Simple theme that works with Compose -->
    <style name="Theme.Junkboy" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
    
    <!-- Fallback to basic Android theme if Material3 not available -->
    <style name="Theme.Junkboy.Fallback" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Ultra-safe fallback theme -->
    <style name="Theme.Junkboy.Safe" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources> 